    "/user/register": {
      "post": {
        "summary": "Criar usuário",
        "description": "Rota para criar usuário",
        "tags": ["User"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "summary": "Exemplo de criação de usuário",
                  "value": {
                    "name": "Joao",
                    "email": "joao@teste.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        }
      }
    },
