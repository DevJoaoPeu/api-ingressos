  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Event": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "dtStart": {
            "type": "string",
            "format": "date-time"
          },
          "dtEnd": {
            "type": "string",
            "format": "date-time"
          },
          "location": {
            "type": "string"
          }
        }
      },
      "Ticket": {
        "type": "object",
        "properties": {
          "eventId": {
            "type": "string",
            "format": "uuid"
          },
          "ownerId": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "type": "string",
            "enum": ["PISTA", "VIP"]
          },
          "price": {
            "type": "number",
            "format": "decimal"
          },
          "qtTicket": {
            "type": "integer"
          },
          "dtAvailability": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "SessionUserParams": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
